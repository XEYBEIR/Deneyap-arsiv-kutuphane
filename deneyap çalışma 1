#include <iostream>
#include <string>
using namespace std;

string gorevHazirligiKontrol(int agirlik, int pil, int gps, int ruzgar) {
    if (agirlik > 10) {
        return "Agir yuk, kalkis reddedildi!";
    }
    if (pil < 40) {
        return "Pil yetersiz, gorev iptal!";
    }
    if (gps < 50) {
        return "GPS sinyali zayif, konum kaybi riski!";
    }
    if (ruzgar > 40) {
        return "Ruzgar cok siddetli, ucus guvensiz!";
    }
    return "Gorev icin hazir! Ucusa izin verildi.";
}

int main() {
    const int IHA_SAYISI = 3;

    int agirlik[IHA_SAYISI];
    int pil[IHA_SAYISI];
    int gps[IHA_SAYISI];
    int ruzgar[IHA_SAYISI];

    for (int i = 0; i < IHA_SAYISI; i++) {
        cout << i+1 << ". IHA icin verileri girin:" << endl;
        cout << "Agirlik (kg): ";
        cin >> agirlik[i];
        cout << "Pil (%): ";
        cin >> pil[i];
        cout << "GPS (%): ";
        cin >> gps[i];
        cout << "Ruzgar (km/sa): ";
        cin >> ruzgar[i];
        cout << endl;
    }

    for (int i = 0; i < IHA_SAYISI; i++) {
        string durum = gorevHazirligiKontrol(agirlik[i], pil[i], gps[i], ruzgar[i]);
        cout << "IHA " << i+1 << " Gorev Durumu: " << durum << endl;
    }

    return 0;
}
